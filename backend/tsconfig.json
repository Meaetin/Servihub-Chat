{
  "compilerOptions": {
    "target": "ES2020",                     // Good balance between features and compatibility
    "module": "commonjs",                   // Node.js requires CommonJS
    "rootDir": "src",                       // Source folder for TypeScript files
    "outDir": "dist",                       // Compiled JavaScript goes here
    "strict": true,                         // Enable all strict type-checking options
    "esModuleInterop": true,                // Allow default imports from CommonJS modules
    "forceConsistentCasingInFileNames": true, // Prevent case mismatches in imports
    "skipLibCheck": true,                   // Speed up compilation by skipping `.d.ts` type checking
    "moduleResolution": "node",             // Use Node module resolution logic
    "resolveJsonModule": true,              // Allow importing .json files
    "sourceMap": true,                      // Optional: Generate .map files for debugging
    "types": ["node"],                      // Add type definitions for Node.js
    "allowJs": false                        // Only use TypeScript files, not plain .js
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
